@using OmarsHealthWebsite.Models;
@model CallMeBack

<head>

    <style>
        .form-control {
            border: solid 1px #3e285e !important;
            color: #3e285e !important;
        }
    </style>
</head>

@using (Html.BeginForm("CallMeBack", "Claim", FormMethod.Post, new { @class = "goldmine_callback" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="form-group form_first_name">
            <span class="form-validation-error"></span>
            @Html.LabelFor(x => x.FirstName)
            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control first_name", placeholder = "First Name", required = "required" })
        </div>
        <div class="form-group form_surname">
            <span class="form-validation-error"></span>
            @Html.LabelFor(x => x.LastName)
            @Html.TextBoxFor(x => x.LastName,  new { @class = "form-control first_name", placeholder = "First Name", required = "required" })
        </div>
        <div class="form-group form_phone_number">
            <span class="form-validation-error"></span>
            @Html.LabelFor(x => x.PhoneNumber)
            @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control phone_number", placeholder = "Phone Number", required = "required" })
        </div>

        <button class="btn btn-red btn-block" type="submit" name="name" value="Call Me Back">Call Me Back</button>

    </fieldset>
}
